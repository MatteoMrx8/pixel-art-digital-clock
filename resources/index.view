                        <image height="27" width="26" href="img/omino_gamba_dx.png" />
                        <animateTransform class="omino-animation" attributeType="rotate" begin="enable" final="keep" repeatCount="0" from="0" to="68" dur="0.4" />
                        <animateTransform class="omino-animation" attributeType="translate" begin="enable" final="keep" repeatCount="0" from="0%,0%" to="0%+9,0%" dur="0.4" />
                        
                        <animateTransform class="omino-animation" attributeType="rotate" begin="enable+0.5" final="keep" repeatCount="0" from="68" to="0" dur="0.4" />
                        <animateTransform class="omino-animation" attributeType="translate" begin="enable+0.5" final="keep" repeatCount="0" from="0%+9,0%" to="0%,0%" dur="0.4" />
