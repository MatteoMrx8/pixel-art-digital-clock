                    </g>
                </symbol>
                <symbol id="left-leg">
                    <g pointer-events="visible" transform="translate(100%,0%)">
                        <image x="-100%" height="34" width="18" href="img/omino_gamba_sx.png" />
                        <animateTransform class="omino-animation" attributeType="rotate" begin="enable" final="keep" repeatCount="0" from="0" to="-68" dur="0.4" />
                        <animateTransform class="omino-animation" attributeType="translate" begin="enable" final="keep" repeatCount="0" from="100%,0%" to="100%-9,0%" dur="0.4" />
                        
                        <animateTransform class="omino-animation" attributeType="rotate" begin="enable+0.5" final="keep" repeatCount="0" from="-68" to="0" dur="0.4" />
                        <animateTransform class="omino-animation" attributeType="translate" begin="enable+0.5" final="keep" repeatCount="0" from="100%-9,0%" to="100%,0%" dur="0.4" />
                    </g>
                </symbol>
                <symbol id="right-leg">
