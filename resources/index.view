        <svg x="0" y="0" height="100%" width="34%">
            <defs>
                <symbol id="left-arm">
                    <g>
                        <image height="19" width="20" href="img/omino_braccio_sx.png" />
                        <animateTransform class="omino-animation" attributeType="rotate" begin="enable" final="keep" repeatCount="0" from="0" to="94" dur="0.4" />
                        <animateTransform class="omino-animation" attributeType="rotate" begin="enable+0.5" final="keep" repeatCount="0" from="94" to="0" dur="0.4" />
                    </g>
                </symbol>
                <symbol id="right-arm">
                    <g pointer-events="visible" transform="translate(100%,0%)">
                        <image x="-100%" height="19" width="20" href="img/omino_braccio_dx.png" />
                        <animateTransform class="omino-animation" attributeType="rotate" begin="enable" final="keep" repeatCount="0" from="0" to="-94" dur="0.4" />
